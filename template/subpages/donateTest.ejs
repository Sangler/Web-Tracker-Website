<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DONATION</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/x-icon" href="/imgs/favicon_io/favicon.ico">
    <style>
        .image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 300px;
            position: relative;
        }
        .image-container p {

        }

        #payment-image {
            max-width: 300px;
            max-height: 300px;
            opacity: 1;
            transition: opacity 0.7s ease;
            position: relative;
        }
    
        .visible {
            opacity: 1;
            visibility: visible;
        }

        .title-set{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .button-set {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin: 20px 0;
        }

    </style>
</head>
<body>
    <%- include('../layout/header')%>
    <div class="title-set">
        <h1 style="color:mediumslateblue">THIS IS DONATION PAGE</h1>
    </div>

<label for="payments">Choose a donation methods:</label>
<select name="payments" id="payments">
  <option value="BTC">Bitcoin</option>
  <option value="ETH">Etherium</option>
  <option value="USDT">USDT</option>
  <option value="USDC">USDC</option>
  <option value="Ada">Cardano</option>
  <option value="BNB">BNB</option>
</select>

    <div class="button-set">
        <button type="button" data-method="e-transfer" data-src="./imgs/donation-QR/BTC/btc-payment.jpg">Bitcoin</button>
    </div>



    <div class="image-container">
        <img id="payment-image" src="" alt="Payment method">
        <span><p>bc1qv7xlj044y2ulz93js8cvk48avhplpf82g3c34u</p></span>
    </div>

    <%- include('../layout/footer')%>

    
    <script src="./js/event.js"></script>
   <script>
  document.addEventListener("DOMContentLoaded", function () {
    const paymentImage = document.getElementById('payment-image');
    // Correctly select the <p> element within the image container
    const address = document.querySelector('.image-container p');
    let currentMethod = null;

    document.querySelectorAll('.button-set button').forEach(button => {
      button.addEventListener('click', function () {
        const method = this.dataset.method;
        const imageSrc = this.dataset.src;
        
        if (currentMethod === method) {
          // Hide if clicking the same method
          paymentImage.classList.remove('visible');
          address.classList.remove('visible');
          currentMethod = null;
        } else {
          // Show new method
          paymentImage.src = imageSrc;
          paymentImage.alt = `${method} logo`;
          paymentImage.classList.add('visible');
          address.classList.add('visible');
          currentMethod = method;
        }
      });
    });

    // Handle image transition end (optional)
    paymentImage.addEventListener('transitionend', (e) => {
      if (!paymentImage.classList.contains('visible')) {
        paymentImage.src = '';
      }
    });
  });
</script>
</body>
</html>