<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Donation</title>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/imgs/favicon_io/favicon.ico">
  <style>
    .image-container img {
      width: 350px;
      height: 350px;
      object-fit: contain;
    }
    .image-container {
      margin-top: 1rem;
      text-align: center;
    }
    .image-container p {
      margin-top: 0.5rem;
      font-size: 1.1rem;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <%- include('../layout/header') %>

  <div class="title-set">
    <h1 style="color: black;">This is the Donation Page</h1>
  </div>

  <label for="payments">Choose a donation method:</label>
  <select id="payments" name="payments">
    <option value="" disabled selected>Select method</option>
    <option value="Visa">Visa</option>
    <option value="ApplePay">Apple Pay</option>
    <option value="ETransfer">E-Transfer</option>
  </select>

  <div class="image-container">
    <img id="payment-image" src="/imgs/default.png" alt="Payment method">
    <p id="payment-name">Please select a method</p>
  </div>

  <%- include('../layout/footer') %>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const paymentsSelect = document.getElementById("payments");
      const paymentImage   = document.getElementById("payment-image");
      const paymentName    = document.getElementById("payment-name");

      // Map each select value to its image URL
      const paymentImages = {
        Visa:      "data:image/png;base64,",
        ApplePay:  "https://cdn2.downdetector.com/static/uploads/c/300/024c8/apple-pay.png",
        ETransfer: "data:image/png;base64,"
      };

      paymentsSelect.addEventListener("change", function() {
        const method = this.value;                                              
        const imgUrl = paymentImages[method] || "/imgs/default.png";           
        paymentImage.src  = imgUrl;                                             
        paymentName.textContent = this.options[this.selectedIndex].textContent;
      });
    });
  </script>
</body>
</html>
